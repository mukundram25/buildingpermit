{
    "version": 2,
    "functions": {
        "api/*.py": {
            "runtime": "@vercel/python@3.0.0",
            "config": {
                "python": "3.12"
            }
        }
    },
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/handler.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "FLASK_ENV": "production"
    }
} 